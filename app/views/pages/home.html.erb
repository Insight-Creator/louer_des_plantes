<header>
  <%= render 'components/navbar_logout' %>
</header>
<main class="green d-flex flex-column">
  <div id="banner-main" class="mt-5">
    <div id="content">
      <%= image_tag('logo-big.png', class: "mb-4") %>
      <p class="mb-4">Rent a plant or share your plants with other renters</p>
        <div class="search__container">
          <%= form_tag plants_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "search__input",
              placeholder: "find a plant"
            %>
            <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
          </div>
    </div>
  </div>
</main>

<%= render "plants/index", plants: @plants %>
<%= render 'components/footer' %>

