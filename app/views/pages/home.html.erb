<header>
  <%= render 'components/navbar_logout' %>
</header>
<main class="green d-flex flex-column">
  <div id="banner-main" class="mt-5">
    <div id="content">
      <%= image_tag('logo-big.png', class: "mb-4") %>
      <p class="mb-4">Rent a plant or share your plants with other renters</p>
        <div class="search__input">
          <%= form_tag root_path,     class: "d-flex justify-content-between", method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              placeholder: "find a plant"
            %>
            <%= button_tag type: 'submit', class: "button-blue-search" do %>
              <i class="fas fa-search"></i>
            <% end %>
          <% end %>
        </div>
    </div>
  </div>
</main>

<%= render "plants/index", plants: @plants %>
<%= render 'components/footer-pinned' %>

