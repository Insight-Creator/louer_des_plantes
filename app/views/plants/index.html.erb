<% <%= render "components/banner" %> %>
<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2 class="text-secondary">Plants</h2>
      <div class="mt-5 d-flex flex-row justify-content-start flex-wrap">
        <% @plants.each do |plant| %>
          <%= link_to plant_path(plant), class: "text-decoration-none" do %>
            <div class="card-plant text-dark mb-2 mr-2" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1))">
              <h5 class="text-light"><%= plant.name %></h5>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
