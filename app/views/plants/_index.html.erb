<div class="container mt-5 mb-5 beige-bg">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2>Plants</h2>
      <div class="mt-5 d-flex flex-row justify-content-start flex-wrap">
        <% @plants.each do |plant| %>
          <%= link_to plant_path(plant), class: "text-decoration-none" do %>

            <div class="card-plant mb-2 mr-2">
              <div class="img" style="background-image: url('<%= plant.image_url %>')"></div>
              <div class="card-plant-footer">
                <div>
                  <h3><%= plant.common_name %></h3>
                  <p><%= plant.scientific_name %></p>
                </div>
                <h4>$<%= plant.price %></h4>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
