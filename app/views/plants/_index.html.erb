<div class="beige-bg w-100 d-flex justify-content-center">
  <div class="w-90">
    <h1 class="mt-5 mb-4"> <%= @plants.any? ? "Plants" : "" %> </h1>
        <div class="mt-4 mb-5 d-flex flex-row justify-content-between flex-wrap">
          <% @plants.each do |plant| %>
            <%= link_to plant_path(plant), class: "text-decoration-none" do %>

              <div class="card-plant mb-5">
                <div class="img" style="background-image: url('<%= cl_image_path plant.photo.key %>')"></div>
                <div class="card-plant-footer">
                  <div>
                    <h3><%= plant.common_name %></h3>
                    <p><%= plant.scientific_name %></p>
                  </div>
                  <h4>$<%= plant.price %></h4>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
  </div>
</div>


