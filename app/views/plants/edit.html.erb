<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-dark">Update Plant</h2>

      <%= simple_form_for @plant do |f| %>
        <% if policy(plant).edit? %>
          <%= link_to "Update", edit_plant_path(plant) %>
        <% end %>
        <%= f.input :photo, as: :file %>
        <%= f.input :common_name %>
        <%= f.input :scientific_name %>
        <%= f.input :family %>
        <%= f.input :address %>
        <%= f.input :price %>
      <% end %>
    </div>
  </div>
</div>
